{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true
    },
  "plugins": [
    "react"
    ],
  "rules": {
    "new-cap": 0,
    "strict": 0,
    "no-underscore-dangle": 0,
    "no-use-before-define": 0,
    "eol-last": 0,
    "quotes": [2, "single"],
    "jsx-quotes": 1,
    "react/jsx-no-undef": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1
  }
}
//to use es6 features, specify the features to use through ecmaFeatures property
//severity: 0 -- disabled, 1 -- warning, 2 -- error
// view available eslint-plugin-react rules from https://www.npmjs.com/package/eslint-plugin-react


